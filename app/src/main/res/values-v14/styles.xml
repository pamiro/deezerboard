<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.


    -->
    <style name="DeezerDemoBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/bkg_theme</item>
        <item name="android:colorBackground">@color/bkg_theme</item>
        <item name="actionBarStyle">@style/CustomActionBarStyle</item>
    </style>

    <!-- ActionBar styles -->
    <style name="CustomActionBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:height">54dp</item>
        <item name="background">@color/bkg_actionbar</item>
    </style>

</resources>